# general
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep --color=auto'
alias l='ls -CF'
alias la='ls -A'
alias ll='ls -alF'
alias ls='ls --color=auto'

# git aliases
alias gs='git status'
alias gss='git status -s'
alias gc='git commit'
alias ga='git add'
alias gd='git diff'
alias gdc='git diff --cached'
alias gr='git reset'
alias gco='git checkout'

# rails aliases
alias load_fixtures='rake db:fixtures:load RAILS_ENV=test'

# sync clock
alias syncdate='sudo ntpdate pool.ntp.org'

